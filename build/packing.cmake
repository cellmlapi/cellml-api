  IF (APPLE)
    SET(CPACK_PACKAGE_FILE_NAME "cellml-sdk-${CMake_VERSION_MAJOR}.${CMake_VERSION_MINOR}-Mac")
    SET(CPACK_BUNDLE_NAME "CellML SDK ${CMake_VERSION_MAJOR}.${CMake_VERSION_MINOR}")
