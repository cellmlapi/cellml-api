<?xml version="1.0" encoding="ISO-8859-1"?>
<model xmlns="http://www.cellml.org/cellml/1.1#">
  <component name="mainComp">
    <variable name="time" units="second"/>
    <variable name="x" initial_value="0" units="dimensionless"/>
    <math xmlns="http://www.w3.org/1998/Math/MathML">

<!--
          <apply><eq/>
            <apply><diff/>
              <ci>x</ci>
              <bvar><ci>time</ci></bvar>
            </apply>
            <apply><times/>
              <cn units="hertz">1</cn>
              <ci>x</ci>
            </apply>
          </apply>
-->

      <piecewise>
        <piece>
          <apply><eq/>
            <apply><diff/>
              <ci>x</ci>
              <bvar><ci>time</ci></bvar>
            </apply>
            <cn units="hertz">1</cn>
          </apply>
          <apply><lt/>
            <ci>x</ci>
            <cn units="dimensionless">100</cn>
          </apply>
        </piece>
        <otherwise>
          <apply><eq/>
            <apply><diff/>
              <ci>x</ci>
              <bvar><ci>time</ci></bvar>
            </apply>
            <cn units="hertz">-1</cn>
          </apply>
        </otherwise>
      </piecewise>
    </math>
  </component>
</model>
