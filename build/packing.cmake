    SET(CPACK_PACKAGE_FILE_NAME "cellml-sdk-${CMake_VERSION_MAJOR}.${CMake_VERSION_MINOR}-Linux-${CMAKE_SYSTEM_PROCESSOR}")
    SET(CPACK_GENERATOR "TBZ2")
  ENDIF()
